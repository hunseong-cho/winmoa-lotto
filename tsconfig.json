    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // ðŸ”¥ ì—¬ê¸° ë°˜ë“œì‹œ "node"
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // ðŸ“Œ ê¼­ ìžˆì–´ì•¼ í•¨
    "paths": {
      "@/*": [
        "./*"
      ] // ðŸ“Œ ì ˆëŒ€ê²½ë¡œ alias
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
